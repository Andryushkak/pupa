<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="fade-in">
    <div class="navbar">
        <a href="/">Home</a>
        <a href="/register">Register</a>
    </div>

    <div class="center-wrapper">
        <div class="container-log">
            <h1>Login</h1>

            <!-- Flash-повідомлення -->
            <% if (error && error.length > 0) { %>
                <% error.forEach(function(msg) { %>
                    <div class="flash-error"><%= msg %></div>
                <% }); %>
            <% } %>

            <form action="/login" method="post">
                <div>
                    <label>Email:</label>
                    <input type="email" name="email" required>
                </div>
                <div>
                    <label>Password:</label>
                    <input type="password" name="password" required>
                </div>
                <button type="submit">Login</button>
            </form>
        </div>
    </div>

    <div class="social-icons">
        <a href="/auth/google" class="social-icon">
            <img src="/image/google-icon.png" alt="Google Icon">
        </a>
    </div>

    <!-- Автоматичне зникнення flash через 4 секунди -->
    <script>
    setTimeout(() => {
        const flashMessages = document.querySelectorAll('.flash-error');
        flashMessages.forEach(el => {
            el.classList.add('hide');
            // Після завершення анімації прибираємо елемент
            el.addEventListener('animationend', () => el.remove());
        });
    }, 4000);
</script>

</body>
</html>
